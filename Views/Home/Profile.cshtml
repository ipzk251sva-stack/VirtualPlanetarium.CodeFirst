@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Профіль";
    Layout = "_Layout";
    var user = await UserManager.GetUserAsync(User);
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-secondary shadow-lg">

                <div class="card-header border-secondary">
                    <h3 class="text-info m-0">👤 Обліковий запис</h3>
                </div>

                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="text-secondary small text-uppercase">Email користувача</label>
                        <div class="fs-4">@user?.Email</div>
                    </div>

                    @if (User.IsInRole("Administrator"))
                    {
                        <div class="mb-4">
                            <label class="text-secondary small text-uppercase">Роль</label>
                            <div>
                                <span class="badge bg-success bg-opacity-25 text-success border border-success">Administrator</span>
                            </div>
                        </div>
                    }

                    <hr class="border-secondary my-4">

                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Map", "CelestialObjects", new { area = "" })">
                        <button type="submit" class="btn btn-outline-danger w-100">
                            Вийти з акаунту
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>